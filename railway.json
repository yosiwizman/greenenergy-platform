{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/core-api/Dockerfile",
    "watchPatterns": [
      "apps/core-api/**",
      "packages/**",
      "pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "startCommand": "node dist/main.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
