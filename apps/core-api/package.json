{
  "name": "@greenenergy/core-api",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS backend API for Green Energy Platform",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "seed:jobnimbus": "ts-node -r dotenv/config src/scripts/seed-jobnimbus.ts"
  },
  "dependencies": {
    "@greenenergy/db": "workspace:*",
    "@greenenergy/jobnimbus-sdk": "workspace:*",
    "@greenenergy/shared-types": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "jsonwebtoken": "^9.0.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@greenenergy/config": "workspace:*",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@prisma/client": "^5.8.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
